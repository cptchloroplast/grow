{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "server:worker:build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/server/src/Grow.Worker/Grow.Worker.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "server:console:build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/server/src/Grow.Console/Grow.Console.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "server:start",
      "dependsOn": [
        "redis:start",
        "sql:start",
        "mqtt:start",
        "server:migrations:upgrade"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "sql:start",
      "command": "make",
      "args": [
        "sql.start"
      ]
    },
    {
      "label": "redis:start",
      "command": "make",
      "args": [
        "redis.start"
      ]
    },
    {
      "label": "mqtt:start",
      "command": "make",
      "args": [
        "mqtt.start"
      ]
    },
    {
      "label": "server:migrations:upgrade",
      "command": "bash",
      "args": [
        "-c",
        "source server/.venv/bin/activate; make server.migrations.upgrade"
      ],
    }
  ]
}