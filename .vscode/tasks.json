{
	"version": "2.0.0",
	"tasks": [
    {
      "label": "Server:Develop",
      "dependsOn": [
        "Redis:Start",
        "SQL:Start",
        "Server:Migrations:Upgrade"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "SQL:Start",
      "command": "make",
      "args": [
        "sql.start"
      ]
    },
    {
      "label": "Redis:Start",
      "command": "make",
      "args": [
        "redis.start"
      ]
    },
    {
      "label": "Server:Migrations:Upgrade",
      "command": "bash",
      "args": [
        "-c",
        "source server/.venv/bin/activate; make server.migrations.upgrade"
      ],
    }
  ]
}